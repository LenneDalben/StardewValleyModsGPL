{
	"Format": "2.6.0",
	"ConfigSchema": {
		"NumberOfDaysAhead": {
			"Description": "For guaranteed Pierre planning, choose between 1 (default), 3, or 7 days. For random Pierre 'maybe' planning, choose between Maybe1, Maybe7, or Draylon.",
			"AllowValues": "1, 3, 7, Maybe1, Maybe7, Draylon",
			"Default": "1",
			"AllowBlank": false,
			"AllowMultiple": false
		}
	},
	"DynamicTokens": [
		/*1 Day Ahead Letter - Spring*/ {
			"Name": "PPALetterText",
			"Value": "{{i18n:onedayaheadspringletter.text}}",
			"When": {
				"Season": "Spring",
				"NumberOfDaysAhead": "1"
			}
		},
		/*1 Day Ahead Letter - Summer*/ {
			"Name": "PPALetterText",
			"Value": "{{i18n:onedayaheadsummerletter.text}}",
			"When": {
				"Season": "Summer",
				"NumberOfDaysAhead": "1"
			}
		},
		/*1 Day Ahead Letter - Winter*/ {
			"Name": "PPALetterText",
			"Value": "{{i18n:onedayaheadwinterletter.text}}",
			"When": {
				"Season": "Winter",
				"NumberOfDaysAhead": "1"
			}
		},
	],
	"Changes": [
		// 'May' Plan Ahead: 1, Draylon Edition, and up to 7 days in advance. Idk how the random portion will work
		/*Include 1 Day Ahead*/ {
			"LogName": "Include Pierre Plans 1 Day Ahead",
			"Action": "Include",
			"FromFile": "assets/OneDayAhead.json",
			"When": {
				"NumberOfDaysAhead": "1"
			}
		},
		/*Include 3 Days Ahead*/ {
			"LogName": "Include Pierre Plans 3 Days Ahead",
			"Action": "Include",
			"FromFile": "assets/ThreeDaysAhead.json",
			"When": {
				"NumberOfDaysAhead": "3"
			}
		},
		/*Include 7 Days Ahead*/ {
			"LogName": "Include Pierre Plans 7 Days Ahead",
			"Action": "Include",
			"FromFile": "assets/SevenDaysAhead.json",
			"When": {
				"NumberOfDaysAhead": "7"
			}
		}
	]
}