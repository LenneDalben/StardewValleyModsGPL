{
	"Format": "2.6.0",
	"ConfigSchema": {
		"NumberOfDaysAhead": {
			"Description": "For guaranteed Pierre planning, choose between 1 (default), 3, or 7 days. For random Pierre 'maybe' planning, choose between Maybe1, Maybe7, or Draylon.",
			"AllowValues": "1, 3, 7, Maybe1, Maybe7, Draylon",
			"Default": "1",
			"AllowBlank": false,
			"AllowMultiple": false
		}
	},
	"DynamicTokens": [
		// May Plan 7 Days Ahead Random Date Range Selection
		/*Doesn't add skip button to the beginning of events when Skippable config is false*/ {
			"Name": "Maybe7Token",
			"Value": "{{Random: DATE_RANGE Spring 22 1 Spring 28, DATE_RANGE Spring 26 1 Spring 28, SEASON_DAY Spring 28}}",
			// DATE_RANGE Spring 22 1 Spring 28
			// DATE_RANGE Spring 26 1 Spring 28
			// SEASON_DAY Spring 28
		},
	],
	"Changes": [
		// 'May' Plan Ahead: 1, Draylon Edition, and up to 7 days in advance. Idk how the random portion will work
		/*Include 1 Day Ahead*/ {
			"LogName": "Include Pierre Plans 1 Day Ahead",
			"Action": "Include",
			"FromFile": "assets/OneDayAhead.json",
			"When": {
				"NumberOfDaysAhead": "1"
			}
		},
		/*Include 3 Days Ahead*/ {
			"LogName": "Include Pierre Plans 3 Days Ahead",
			"Action": "Include",
			"FromFile": "assets/ThreeDaysAhead.json",
			"When": {
				"NumberOfDaysAhead": "3"
			}
		},
		/*Include 7 Days Ahead*/ {
			"LogName": "Include Pierre Plans 7 Days Ahead",
			"Action": "Include",
			"FromFile": "assets/SevenDaysAhead.json",
			"When": {
				"NumberOfDaysAhead": "7"
			}
		},
		/*Include May Plan 1 Day Ahead*/ {
			"LogName": "Include Pierre May Plan 1 Day Ahead",
			"Action": "Include",
			"FromFile": "assets/MaybeOneDayAhead.json",
			"When": {
				"NumberOfDaysAhead": "Maybe1"
			}
		},
		/*Include May Plan 7 Days Ahead*/ {
			"LogName": "Include Pierre May Plan 7 Days Ahead",
			"Action": "Include",
			"FromFile": "assets/MaybeSevenDaysAhead.json",
			"When": {
				"NumberOfDaysAhead": "Maybe7"
			}
		},
		/*Include May Plan 7 Days Ahead*/ {
			"LogName": "Include Pierre May Plan Ahead Draylon Edition",
			"Action": "Include",
			"FromFile": "assets/DraylonEdition.json",
			"When": {
				"NumberOfDaysAhead": "Draylon"
			}
		},
	]
}